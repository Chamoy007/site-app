<p id="notice"><%= notice %></p>

<script src="//maps.google.com/maps/api/js?key=AIzaSyBl4A9FU5D1xHc6wl5GEfY5KGXumWFHy6Q"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="layout">

	<%= render 'shared/nav' %>

	<div class="main">

  		<div class="form-container--large">
  			<%= link_to 'Atrás', index_manager_admin_path, class: "back-button" %>
  			<h1>DIRECTORIO DE EMPRESAS</h1>
	    	
  			<div>
  				<%= form_tag(business_directory_admin_path(), :method => "get", id: "search") do %>
				  <div>
				    <div>
				    	<strong>PUEDES FILTRAR POR: </strong>
				    	<strong class="hide">SECTOR: </strong>
						<%= select_tag :sector, options_for_select(Sector.all.map{|s|[s.name, s.id]},params[:sector]), {:include_blank => 'Todos'} %>
						<strong class="hide">EMPRESA: </strong>
						<%= text_field_tag :search, params[:search], placeholder: "Buscar Empresa" %>
				    	<%= submit_tag "Buscar" %>    
				    </div>
				  </div>
				<% end %>

  			</div>

			<table class="site-table">
		      <thead>
		        <tr>
		          <th>EMPRESA Y ACTIVIDAD</th>
		          <th>DIRECCIÓN</th>
		          <th>CONTACTO</th>
		        </tr>
		      </thead>

		     
				<tbody>
					<% @companies.each do |company| %>
						<tr>
							<td>
								<strong><%= company.company_name %></strong><br>
								<% if company.activity %>
									<%= company.activity.name %>
								<% end %>
							</td>
							<td>
								<% if company.address %>
									<%= company.address %> 
								<% end %>
							</td>
							<td>
								<% if company.name_director %>
									<%= company.name_director %>
									<br>
								<% end %>
								<% if company.phone %>
									<%= company.phone %> 
									<br>
								<% end %>
								<% if company.email %>
									<%= company.email %> 
									<br>
								<% end %>
								<% if company.web %>
									<%= company.web %> 
								<% end %>
							</td>
				  		</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>