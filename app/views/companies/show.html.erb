<p id="notice"><%= notice %></p>
<h1>Informacion General</h1>
<p>
  <strong>Company name:</strong>
  <%= @company.company_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @company.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @company.phone %>
</p>

<p>
  <strong>Email user:</strong>
  <%= @company.email_user %>
</p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Sector:</strong>
  <% if @company.sector %>
    <%= @company.sector.name %>
  <% end %>
</p>

<p>
    <strong>Role:</strong>
    <%= @company.role %>
</p>

<p>
  <strong>
    <% if @company.active %>
      <h2>ACTIVO</h2>
      <%=link_to "Desactivar", deactivate_path(company_id: @company), method: :post, data: { confirm: "¿Estas seguro de desactivar la compania?" } %>
    <% else %>
      <h2>DESACTIVADO</h2>
      <%=link_to "Activar", action_activate_path(company_id: @company), method: :post, data: { confirm: "¿Estas seguro de activar la compania?" } %>
    <% end %>
  </strong>
</p>

