<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>Nombre del Curso</strong><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <strong>Fecha inicio</strong><br>
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <strong>Fecha Fin</strong><br>
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    <strong>Expositor</strong><br>
    <%= f.text_field :name_exhibitor %>
  </div>
  <div class="field">
    <strong>Nivel de Curso:</strong>
    <%= f.select :level_id, options_for_select(Level.all.map{|s|[s.title, s.id]}) %>
  <div class="field">
    <strong>Horario</strong><br>
    <%= f.text_field :hours %>
  </div>
  <div class="field">
    <strong>Costo</strong><br>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit 'Guardar' %>
  </div>
<% end %>
