<p id="notice"><%= notice %></p>


<div class="layout">
  <%= render 'shared/nav' %>
  <div class="main">
    <%= link_to 'Atrás', sections_index_path, class: "back-button" %>
    <h1 class="main-headline inline-block">Subramas</h1>
    <p>
      <%= link_to 'Nueva Subrama', new_subbranch_path, class: "btn" %>
    </p>


    <table class="site-table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Rama</th>
          <th>Código</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @subbranches.each do |subbranch| %>
          <tr>
            <td><%= link_to subbranch.name, subbranch %></td>
            <td>
              <%if  subbranch.branch %>
                <%= subbranch.branch.name %>
              <% end %>
            </td>
            <td><%= subbranch.code %></td>
            <td><%= link_to 'Eliminar', subbranch, method: :delete, data: { confirm: 'Seguro que desea eliminar?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render "shared/footer" %>