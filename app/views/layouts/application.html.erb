<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
	<title>Siteapp</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
  	<meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  	<link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.4-rc2/foundation.min.css">
	<% if current_user %>
		<table>
			<tr>
				<td>LOGO</td>
				<td>
					<% if current_user.is? 'admin' %>
						<%= link_to 'DASHBOARD admin', companies_path %>
					<% elsif current_user.is? 'emprered' %>
						<%= link_to 'DASHBOARD emprered', index_emprered_path %>
					<% elsif current_user.is? 'company' %>
						<%= link_to 'DASHBOARD company', index_company_path %>
					<% end %>
				</td>
				<td>
					<select name="perfil">
						<option>Hola <strong><%= current_user.name %> (<%=current_user.email%>)</strong>.</option>
						<option>Editar Perfil</option>
						<option><%= link_to 'Logout', destroy_user_session_path, method: :delete %></option>
					</select>
					<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
					
				</td>
			</tr>
		</table>
	<% end %>
</head>
<body>



<%= yield %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/foundation/6.2.4-rc2/foundation.min.js"></script>
<script>
	$(document).foundation();
</script>
</body>
</html>
