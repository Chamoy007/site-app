<p id="notice"><%= notice %></p>
<%= link_to 'Atrás', companies_path, class: "back-button" %>
<h1 class="main-headline inline-block">Actividades económicas</h1>
<br>
<%= link_to 'Nueva Actividad Económica', new_economic_activity_path %>
<br>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @economic_activities.each do |economic_activity| %>
      <tr>
        <td><%= link_to economic_activity.name, edit_economic_activity_path(economic_activity) %></td>
        <td><%= link_to 'Eliminar', economic_activity, method: :delete, data: { confirm: 'Seguro que quiere eliminarlo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


