<p id="notice"><%= notice %></p>

<%= link_to 'Atrás', companies_path %>
<h1>Roles</h1>
<%= link_to 'Crear nuevo rol', new_role_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Usuarios</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, role_path(role) %></td>
        <td><%= role.description %></td>
        <th>
          <%= link_to role.get_user_by_role(role), index_role_path(role_id:role) %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>