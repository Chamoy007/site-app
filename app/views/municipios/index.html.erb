<p id="notice"><%= notice %></p>
<%= link_to 'Atrás', companies_path, class: "back-button" %>
<h1 class="main-headline inline-block">Lista de Municipios</h1>
<br>
<%= link_to 'Crear Municipio', new_municipio_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Región</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @municipios.each do |municipio| %>
      <tr>
        <td><%= link_to municipio.name, edit_municipio_path(municipio) %></td>
        <td>
			<% if municipio.region %>
				<%= municipio.region.name %>
			<% end %>
		</td>
        <td><%= link_to 'Eliminar', municipio, method: :delete, data: { confirm: 'Seguro que desear eliminarlo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


