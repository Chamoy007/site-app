<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Empresa:
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    Direccion:
    <%= f.text_field :address %>
  </div>
  <div class="field">
    Telefono convencional:
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    Email:
    <%= f.text_field :email %>
  </div>
  <div class="field">
    Representante:
    <%= f.text_field :name_agent %>
  </div>
  
  <div class="field">
    Sector:
    <%= f.select :sector_id, options_for_select(Sector.all.map{|s|[s.name, s.id]}) %>
    <div class="sector-cool">

      <% Sector.all.each do |sector| %>
        <div class="sector-cool__item" id="opt-<%= sector.id %>">
          <%= image_tag (sector.image.url(:thumb)) %>
          <%= sector.name %>
        </div>
      <% end %>
    </div>
    
  </div>
  <div class="field">
    Nombre de usuario:
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Email usuario:
    <%= f.text_field :email_user %>
  </div>

  <div class="actions">
    <%= f.submit class: 'submit-btn' %>
  </div>
<% end %>
