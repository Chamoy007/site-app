<p id="notice"><%= notice %></p>
<%= link_to 'Atrás', companies_path, class: "back-button" %>
<h1 class="main-headline inline-block">Lista de Regiones</h1>
<br>
<%= link_to 'Nueva Región', new_region_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= link_to region.name, edit_region_path(region) %></td>
        <td><%= link_to 'Eliminar', region, method: :delete, data: { confirm: 'Seguro que deseas eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


