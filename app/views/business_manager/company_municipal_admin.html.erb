<div class="layout">

  <div class="nav">
    <a href="#" class="nav__item">
      <%= image_tag "calificacion-empresa-tab.png" %>      
      <span>Calificación de la empresa</span>
    </a>

    <%= link_to index_manager_user_path, class: "nav__item" do %>
      <%= image_tag "calificacion-empresa-tab.png" %>      
      <span>Monitor Empresarial</span>
    <% end %>
    
  </div><!-- .nav -->

  <div class="main">
    <%= link_to 'Atrás', index_manager_admin_path, class: "back-button" %>
    <h1 class="main-headline inline-block">NIVEL MUNICIPAL</h1>
    <div>
      <%= form_tag(company_municipal_admin_path(), :method => "get", id: "search") do %>
        <div class="filtros-monitor">
          <div>

            <strong>PUEDES FILTRAR POR: </strong>

            <strong class="hide">SECTOR: </strong>
            <%= select_tag :sector_mun, options_for_select(Sector.all.map{|s|[s.name, s.id]}, params[:sector_mun]) %>
            
            <%= submit_tag "Buscar" %>    
          </div>
        </div>
      <% end %>
    </div>
    <table class="site-table">
      <thead>
        <tr>
          <th>ACTIVIDAD ECONÓMICA</th>
          <th>NÚMERO DE EMPRESAS</th>
          <th>SECTOR</th>
          <th>MUNICIPIO</th>
        </tr>
      </thead>
      <tbody>
        <% @company_am.each do |company_list| %>
          <tr>
            <td>
              <strong><%= company_list[0].name %></strong>
            </td>
            <td>
              <%= company_list[1] %> empresas
            </td>
            <td>
              <%= company_list[2].name %>
            </td>
            <td>
              <%= company_list[3].name %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>

  </div><!-- .main -->

</div><!-- .layout -->

