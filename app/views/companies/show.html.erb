<p id="notice"><%= notice %></p>

<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#general">Información General</a></li>
  <li class="tab-title"><a href="#inf_site">Registro en SITE</a></li>
</ul>
<%= link_to 'Atrás', index_emprered_path %>
<h1>Empresa: <%= @company.company_name %></h1>
<br>
<div class="tabs-content">
  <div class="content active" id="general">
    <h1>Información General</h1>
    <% if can? :update, @company %>
      <%= link_to 'Editar', edit_company_path(@company) %>
    <% end %>
    <p>
      <strong>Nombre de la empresa:</strong>
      <%= @company.company_name %>
    </p>

    <p>
      <strong>Dirección:</strong>
      <%= @company.address %>
    </p>

    <p>
      <strong>Teléfono:</strong>
      <%= @company.phone %>
    </p>

    <p>
      <strong>Correo de usuario:</strong>
      <%= @company.email_user %>
    </p>

    <p>
      <strong>Nombre de usuario:</strong>
      <%= @company.name %>
    </p>

    <p>
      <strong>Sector:</strong>
      <% if @company.sector %>
        <%= @company.sector.name %>
      <% end %>
    </p>

    <p>
      <strong>Último inicio de sesión:</strong>
      <% if @company.user_login %>
        <%= @company.user_login.last_sign_in_at %>
      <% end %>
    </p>

    <h2>Rol</h2>
    <p>
        <strong>Rol:</strong>
        <% if @company.user_login %>
          <%= @company.user_login.role.name %>
        <% end %>
        <br>
        <strong>Descripción:</strong>
        <% if @company.user_login %>
          <%= @company.user_login.role.description %>
        <% end %>
    </p>

    <p>
      <strong>
        <% if @company.active %>
          <h2>ACTIVO</h2>
          <p>Esta acción desactivara a este usuario de su cuenta.</p>
          <%=link_to "Desactivar", deactivate_path(company_id: @company), method: :post, data: { confirm: "¿Estas seguro de desactivar la compania?" } %>
        <% else %>
          <h2>DESACTIVADO</h2>
          <p>Esta acción activara a este usuario de su cuenta.</p>
          <%=link_to "Activar", action_activate_path(company_id: @company), method: :post, data: { confirm: "¿Estas seguro de activar la compania?" } %>
        <% end %>
      </strong>
    </p>
  </div>
    
  <div class="content active" id="inf_site">
    <h1>Registro en SITE</h1>
    <% if can? :update, @company %>
      <%= link_to 'Editar', edit_site_path(@company) %>
    <% end %>
    <p>
      <strong>Tipo de Compañia:</strong>
      <%= @company.company_type %>
    </p>
    <p>
      <strong>Nombre o Razón social:</strong>
      <%= @company.company_name %>
    </p>
    <p>
      <strong>RFC:</strong>
      <%= @company.vat %>
    </p>
    <p>
      <strong>Calle:</strong>
      <%= @company.street %>
    </p>
    <p>
      <strong>Colonia:</strong>
      <%= @company.street2 %>
    </p>
    <p>
      <strong>Municipio:</strong>
      <%= @company.city %>
    </p>
    <p>
      <strong>Email Empresa:</strong>
      <%= @company.email %>
    </p>
    <p>
      <strong>Teléfono convencional:</strong>
      <%= @company.phone %>
    </p>
    <p>
      <strong>Teléfono celular:</strong>
      <%= @company.cel %>
    </p>
    <p>
      <strong>Fecha de inicio de operaciones:</strong>
      <%= @company.date_start %>
    </p>
    <p>
      <strong>Giro de la empresa:</strong>
      <%= @company.line_business %>
    </p>
    <p>
      <strong>Número de trabajadores:</strong>
      <%= @company.num_workers %>
    </p>
    <p>
      <strong>Ventas anuales:</strong>
      <%= @company.annual_sales %>
    </p>
    <p>
      <strong>Historia de la empresa:</strong>
      <%= @company.company_history %>
    </p>
    <p>
      <strong>Producto que genera:</strong>
      <%= @company.company_products %>
    </p>
    <p>
      <strong>Mercados atendidos:</strong>
      <%= @company.company_market %>
    </p>
    <p>
      <strong>Problemas de la empresa:</strong>
      <%= @company.company_problems %>
    </p>
    <p>
      <strong>Nombre del Director:</strong>
      <%= @company.name_director %>
    </p>
    <p>
      <strong>Personal Entrevistado:</strong>
      <%= @company.staff_interviewed %>
    </p>
    <p>
      <strong>Periodo de Diagnóstico:</strong>
      <%= @company.survey_period %>
    </p>
    <p>
      <strong>Nombre de quien elaboró el reporte inicial:</strong>
      <%= @company.name_created %>
    </p>

    <p>
      <strong>
        <% if @company.completed %>
          <h3>Enviar invitación a diagnóstico</h3>
        <% else %>
          <h2></h2>
        <% end %>
      </strong>
    </p>
  </div>
</div>


</div>


